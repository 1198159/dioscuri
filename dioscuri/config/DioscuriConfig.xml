--><!-- Defines Dioscuri Emulator modules and settings --><emulator xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" debug="false" xsi:noNamespaceSchemaLocation="DioscuriConfig.xsd">
   
   <!-- Defines the boot sequence -->      
   <boot>
	   <bootdrives> 
		  <bootdrive>floppy</bootdrive>
		  <bootdrive>none</bootdrive>
		  <bootdrive>none</bootdrive>
	   </bootdrives>
	   <floppycheckdisabled>false</floppycheckdisabled>
   </boot>
   
   <!-- Defines the architecture required -->
   <architecture name="Von Neumann">
      
      <modules>
      
         <!-- Defines the Bios module -->
         <bios>
            <sysbiosfilepath>images/bios/BIOS-bochs-latest</sysbiosfilepath>        
            <vgabiosfilepath>images/bios/VGABIOS-lgpl-latest</vgabiosfilepath>
            <ramaddresssysbiosstartdec>983040</ramaddresssysbiosstartdec> 
            <ramaddressvgabiosstartdec>786432</ramaddressvgabiosstartdec>                   
         </bios>
            
         <!-- Defines the cpu module -->
         <cpu debug="false" speedmhz="5"/>
         
         <!-- Defines the memory module-->
		 <ram debug="false" debugaddressdecimal="9295" sizemb="1"/>
	
         <!-- Defines the floppy drive module -->
	 	 <floppydiskdrives debug="false" updateintervalmicrosecs="250"> <!-- normally 300 microseconds -->
           <floppy>    
             <enabled>true</enabled>           
             <inserted>true</inserted>
             <driveletter>A</driveletter>
             <diskformat>1.44M</diskformat>
             <writeprotected>false</writeprotected>
	         <imagefilepath>images/floppy/Kbd2Scrn.bin</imagefilepath>
	       </floppy> 
        </floppydiskdrives>
                 
        <!-- Defines the PIT module -->
 		<pit clockrate="5" debug="false"/>
 		
          <!-- Defines the keyboard module -->
         <keyboard debug="false" updateintervalmicrosecs="200"/>        
          
         <!-- Defines the ata module -->
	    <atadrives debug="false" updateintervalmicrosecs="100000">
	   	    <harddiskdrive>   
               <enabled>false</enabled>
               <channelindex>0</channelindex>
               <master>true</master>       
               <autodetectcylinders>true</autodetectcylinders>
               <cylinders>0</cylinders>
	   	       <heads>4</heads>
               <sectorspertrack>17</sectorspertrack>
               <imagefilepath>null</imagefilepath>
            </harddiskdrive> 
        </atadrives>
        
        <!-- Defines the video adapter module -->
        <videoadapter debug="false" updateintervalmicrosecs="40000"/>
              
      </modules>
           
   </architecture>
</emulator>
